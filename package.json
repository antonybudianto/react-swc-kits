{
  "name": "react-swc-kits",
  "description": "React SWC Kits monorepo",
  "author": "Antony Budianto",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "ls": "lerna ls",
    "test": "lerna run --stream test",
    "lint": "lerna run --stream lint",
    "watch": "lerna run --parallel watch",
    "build": "lerna run build",
    "build:lib": "lerna run build --ignore=~~name~~",
    "prerelease": "npm run build:lib",
    "release": "lerna publish",
    "release:next": "npm run release -- --npm-tag=next",
    "exec:server": "lerna exec --scope react-kits-server --",
    "exec:tmp": "lerna exec --scope=~~name~~ --",
    "temp:start": "npm run exec:tmp npm start",
    "temp:build": "npm run exec:tmp npm run build",
    "temp:servelocal": "npm run exec:tmp npm run servelocal",
    "temp:lint": "npm run exec:tmp npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antonybudianto/react-swc-kits.git"
  },
  "homepage": "https://github.com/antonybudianto/react-swc-kits#readme",
  "devDependencies": {
    "jest": "^23.6.0",
    "lerna": "^3.2.1"
  }
}
